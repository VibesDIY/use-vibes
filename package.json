{
  "name": "use-vibes",
  "version": "0.1.0",
  "type": "module",
  "description": "A buildless ESM TypeScript module",
  "main": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "build:browser": "node scripts/build-browser.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:browser": "npm run build:browser && playwright test --reporter=line",
    "test:browser:headed": "npm run build:browser && playwright test --headed --reporter=line",
    "test:browser:debug": "npm run build:browser && playwright test --debug --reporter=line",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prerelease": "npm run typecheck && npm run test",
    "serve": "vite fixtures --port 3000"
  },
  "keywords": [
    "esm",
    "typescript",
    "buildless"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "esbuild": "^0.25.1",
    "eslint": "^8.56.0",
    "playwright": "^1.41.2",
    "rollup": "^4.38.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.2.2"
  }
}
